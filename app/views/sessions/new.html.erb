<h2 class="ui center aligned medium icon header">
  Welcome to GroupChatApp- <em>A complete Chat App</em>
</h2>
<h4 class="ui center aligned medium icon header">
  <i class="circular blue power off icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class:"ui form", role: "form"}, url:signin_path) do |f| %>
        <div class="field">
          <%= f.label :name, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :name, placeholder: "Enter your name" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter your password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Sign In", class: "submit ui blue button" %>
        <% end %>
      </div>

    <div class="middle aligned column">
      <div class="ui big blue button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
    </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
