<h4 class="ui center aligned icon header">
  <i class="circular blue comment icon"></i>
  Write Something
</h4>
<div class= "ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id= "messages">
        <div class="ui feed" id="message-section">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: messages_path, remote:true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
            <%= f.text_field :body, placeholder:"Enter a message....." %>
              <%= f.button'<i class="bordered inverted blue edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui vertical pointing menu">
          <a class="item">
            Home
          </a>
          <a class="item active">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
